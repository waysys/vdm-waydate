module AllTest 

imports
    from YearTest
        functions
            testAll: () -> bool,

    from MonthTest 
        functions 
            testAll: () -> bool;

exports 
    functions 
        runAllTests: () -> bool 

definitions 

-- ----------------------------------------------------------------------------
functions
-------------------------------------------------------------------------------

-- runAllTests executes all the tests for Waydate
runAllTests: () -> bool 
runAllTests() == 
    let 
        yearTest = YearTest`testAll(),
        monthTest = MonthTest`testAll()
    in 
        yearTest and monthTest

end AllTest